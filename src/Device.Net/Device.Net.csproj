<Project Sdk="MSBuild.Sdk.Extras/2.0.54">

  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
    <TargetFrameworks>netstandard2.0;net45;MonoAndroid90;monoandroid10.0;uap10.0.16299</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <AssemblyVersion>3.1.0.0</AssemblyVersion>
    <FileVersion>3.1.0.0</FileVersion>
    <Version>3.1.0</Version>
    <Authors>Christian Findlay</Authors>
    <Description>Cross platform C# library for talking to connected devices in a uniform way through dependency injection.</Description>
    <Copyright>Copyright (c) 2020 Christian Findlay</Copyright>
    <PackageProjectUrl>https://github.com/MelbourneDeveloper/Device.Net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MelbourneDeveloper/Device.Net</RepositoryUrl>
    <PackageTags>Hid USB Android UWP Windows C# MacOS Linux</PackageTags>
    <NoWarn>NU5125</NoWarn>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>   
  </PropertyGroup>

  <Choose>
    <When Condition=" '$(Configuration)'=='Debug' ">
      <PropertyGroup>
        <SignAssembly>false</SignAssembly>
      </PropertyGroup>
    </When>
    <When Condition=" '$(Configuration)'=='Release' ">
      <PropertyGroup>
        <SignAssembly>true</SignAssembly>
        <DelaySign>false</DelaySign>
        <AssemblyOriginatorKeyFile>Device.Net.pfx</AssemblyOriginatorKeyFile>
      </PropertyGroup>
    </When>
  </Choose>
	
  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\README.md" Link="README.md" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>    
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0' And '$(TargetFramework)' != 'net45'">
    <Compile Remove="Windows\**" />
    <EmbeddedResource Remove="Windows\**" />
    <None Remove="Windows\**" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'uap10.0.16299'">
    <Compile Remove="UWP\**" />
    <EmbeddedResource Remove="UWP\**" />
    <None Remove="UWP\**" />
  </ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' != 'net45'">
		<Compile Remove="Logging/*.*" />
	  <PackageReference Include="Microsoft.Extensions.Logging.Abstractions">
	    <Version>3.1.7</Version>
	  </PackageReference>    
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'monoandroid10.0'">
	  <PackageReference Include="Microsoft.Bcl.AsyncInterfaces">
	    <Version>1.1.1</Version>
	  </PackageReference>
	  <PackageReference Include="System.Linq.Async">
	    <Version>4.1.1</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
	  <PackageReference Include="Microsoft.Bcl.AsyncInterfaces">
	    <Version>1.1.1</Version>
	  </PackageReference>
	  <PackageReference Include="System.Linq.Async">
	    <Version>4.1.1</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'uap10.0.16299'">
	  <PackageReference Include="Microsoft.Bcl.AsyncInterfaces">
	    <Version>1.1.1</Version>
	  </PackageReference>
	  <PackageReference Include="System.Linq.Async">
	    <Version>4.1.1</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'MonoAndroid90'">
	  <PackageReference Include="Microsoft.Bcl.AsyncInterfaces">
	    <Version>1.1.1</Version>
	  </PackageReference>
	  <PackageReference Include="System.Linq.Async">
	    <Version>4.1.1</Version>
	  </PackageReference>
	</ItemGroup>

</Project>
